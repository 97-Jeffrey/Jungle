<section class="orders-show">

  <header class="page-header">
  <h1 class="alert alert-success" role="alert"> Your payment is successful. Thank You </h1>
    <h1>Order #<%= @order.id %></h1>
    <h3>Total payment of <%= humanized_money_with_symbol @order.total_cents/100 %> </h3>
    <h3>is processed by <%= @order.email %></h3>
    
  </header>

  <div class="order-summary jumbotron">
    <% @order.line_items.each do |item| %>
    <%= render "item", product: item.product, line_item: item, price: item.total_price  %>
    <% end %>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
